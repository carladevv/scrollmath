    "work_id": "chern_triangles_manifolds_1979",
    "author_id": "chern",
    "date": "1979-05-01",
    "source": {
      "work": "From Triangles to Manifolds",
      "chapter": null
    },
    "content": {
      "html": "<p>The rotation index of C is equal to one plus the algebraic sum of the number of self-intersections.</p>"
    },
    "tags": [
      "differential geometry",
      "manifolds",
      "topology"
    ],
    "metrics": {
      "likes": 3368,
      "shares": 378,
      "comments": 209
    }
  },
  {
