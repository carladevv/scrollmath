    "work_id": "chern_triangles_manifolds_1979",
    "author_id": "chern",
    "date": "1979-05-01",
    "source": {
      "work": "From Triangles to Manifolds",
      "chapter": null
    },
    "content": {
      "html": "<p>Two closed smooth curves with the same rotation index are regularly homotopic.</p>"
    },
    "tags": [
      "differential geometry",
      "manifolds",
      "topology"
    ],
    "metrics": {
      "likes": 3442,
      "shares": 660,
